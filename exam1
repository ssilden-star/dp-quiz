    <script>
        let currentQuestion = 1;
        let totalQuestions = 18;
        let userAnswers = {};
        let score = 0;

        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progress-bar').style.width = progress + '%';
            document.getElementById('current-question').textContent = currentQuestion;
        }

        function showQuestion(questionNum) {
            document.querySelectorAll('.question').forEach(q => {
                q.classList.remove('active');
            });
            document.querySelector(`[data-question="${questionNum}"]`).classList.add('active');
            
            document.getElementById('prev-btn').disabled = questionNum === 1;
            document.getElementById('next-btn').style.display = questionNum === totalQuestions ? 'none' : 'inline-block';
            document.getElementById('submit-btn').style.display = questionNum === totalQuestions ? 'inline-block' : 'none';
            
            updateProgress();
        }

        function nextQuestion() {
            if (currentQuestion < totalQuestions) {
                currentQuestion++;
                showQuestion(currentQuestion);
            }
        }

        function previousQuestion() {
            if (currentQuestion > 1) {
                currentQuestion--;
                showQuestion(currentQuestion);
            }
        }

        document.addEventListener('click', function(e) {
            if (e.target.closest('.options li')) {
                const option = e.target.closest('.options li');
                const question = option.closest('.question');
                const questionNum = question.getAttribute('data-question');
                
                question.querySelectorAll('.options li').forEach(li => {
                    li.classList.remove('selected');
                });
                
                option.classList.add('selected');
                userAnswers[questionNum] = option.getAttribute('data-answer');
            }
        });

        function calculateScore() {
            score = 0;
            for (let i = 1; i <= totalQuestions; i++) {
                if (userAnswers[i] === 'correct') {
                    score++;
                }
            }
            return score;
        }

        function submitQuiz() {
            const finalScore = calculateScore();
            const percentage = Math.round((finalScore / totalQuestions) * 100);
            
            document.querySelectorAll('.question').forEach(question => {
                const questionNum = question.getAttribute('data-question');
                const options = question.querySelectorAll('.options li');
                
                options.forEach(option => {
                    const answer = option.getAttribute('data-answer');
                    if (answer === 'correct') {
                        option.classList.add('correct');
                    } else if (option.classList.contains('selected') && answer === 'wrong') {
                        option.classList.add('incorrect');
                    }
                });
            });
            
            const scoreDisplay = document.getElementById('score-display');
            let message = `üéØ Final Score: ${finalScore}/${totalQuestions} (${percentage}%)`;
            
            if (percentage >= 70) {
                scoreDisplay.className = 'score excellent';
                message += '\n\nüéâ Excellent! You passed the exam!\nYou have a solid understanding of DP fundamentals.';
            } else if (percentage >= 60) {
                scoreDisplay.className = 'score good';
                message += '\n\nüëç Good effort! You needscoreDisplay.textContent = message;
        document.getElementById('result').style.display = 'block';
        document.querySelector('.controls').style.display = 'none';
        
        // Scroll to results
        document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
    }

    function restartQuiz() {
        currentQuestion = 1;
        userAnswers = {};
        score = 0;
        
        document.querySelectorAll('.question').forEach(question => {
            const options = question.querySelectorAll('.options li');
            options.forEach(option => {
                option.classList.remove('selected', 'correct', 'incorrect');
            });
        });
        
        document.getElementById('result').style.display = 'none';
        document.querySelector('.controls').style.display = 'flex';
        showQuestion(1);
        
        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Initialize
    updateProgress();

    // Add keyboard navigation
    document.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowLeft' && currentQuestion > 1) {
            previousQuestion();
        } else if (e.key === 'ArrowRight' && currentQuestion < totalQuestions) {
            nextQuestion();
        } else if (e.key === 'Enter' && currentQuestion === totalQuestions) {
            submitQuiz();
        }
    });

    // Add smooth scrolling for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
</script>
